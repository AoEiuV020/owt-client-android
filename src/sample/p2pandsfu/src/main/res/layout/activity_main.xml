<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="owt.sample.p2pandsfu.MainActivity">

    <EditText
        android:id="@+id/etServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/server_url"
        android:inputType="textUri"
        android:textColorLink="@android:color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etRoomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/default_room"
        android:textColorLink="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_start" />

    <CheckBox
        android:id="@+id/cbAudioMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/cb_audio_mute" />

    <CheckBox
        android:id="@+id/cbVideoMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/cb_video_mute" />

    <CheckBox
        android:id="@+id/cbScreenSharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_screen_sharing" />


</LinearLayout>