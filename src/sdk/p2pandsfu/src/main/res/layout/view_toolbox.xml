<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llToolbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="HardcodedText"
    tools:showIn="@layout/fragment_meet">

    <TextView
        android:id="@+id/btnAudioMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0f0"
        android:padding="10dp"
        android:text=" A "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnAudioRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00f"
        android:padding="10dp"
        android:text=" R "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnHangUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:padding="10dp"
        android:text=" H "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnScreenShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0"
        android:padding="10dp"
        android:text=" S "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnVideoMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0f0"
        android:padding="10dp"
        android:text=" V "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btnCameraSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0ff"
        android:padding="10dp"
        android:text=" S "
        android:textColor="#fff"
        android:textSize="30sp" />

</LinearLayout>

            